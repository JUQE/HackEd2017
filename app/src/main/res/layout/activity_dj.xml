<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brianofrim.juqe.DjActivity">

    <TextView
        android:text="DJ Booth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BoothTextView"
        android:textSize="30sp"
        android:textStyle="normal|bold"
        android:textAllCaps="false"
        android:textAlignment="textStart"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/spinner"
        android:entries="@array/search_type_array"
        android:layout_below="@+id/searchTextBox"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/searchTextBox"
        android:layout_alignParentEnd="true"
        android:id="@+id/button2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Search"
        android:ems="10"
        android:id="@+id/searchTextBox"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/BoothTextView"
        android:layout_alignStart="@+id/spinner" />

</RelativeLayout>
